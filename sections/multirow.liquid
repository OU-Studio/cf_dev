<script>
 (() => {
  const area  = document.getElementById('scrollArea');
  const rail  = document.getElementById('ouScrollbar');
  const track = document.getElementById('ouTrack');
  const thumb = document.getElementById('ouThumb');

  let dragging = false;
  let dragStartY = 0;
  let startScrollTop = 0;
  let activePointerId = null;

  const update = () => {
    const scrollHeight = area.scrollHeight;
    const clientHeight = area.clientHeight;
    const scrollTop    = area.scrollTop;
    const trackHeight  = track.clientHeight;

    if (scrollHeight <= clientHeight + 1) {
      rail.classList.add('is-hidden');
      return;
    } else {
      rail.classList.remove('is-hidden');
    }

    const css = getComputedStyle(document.documentElement);
    const minThumb = parseFloat(css.getPropertyValue('--ou-sb-thumb-min')) || 34;

    const ratio = clientHeight / scrollHeight;
    const thumbHeight = Math.max(minThumb, Math.max(20, trackHeight * ratio));
    thumb.style.height = `${thumbHeight}px`;

    const maxThumbTop = trackHeight - thumbHeight;
    const scrollRatio = scrollTop / (scrollHeight - clientHeight);
    thumb.style.top = `${maxThumbTop * scrollRatio}px`;
  };

  area.addEventListener('scroll', update, { passive: true });

  // Click the track to jump (ignore clicks on thumb or its children)
  track.addEventListener('pointerdown', (e) => {
    if (thumb.contains(e.target)) return;
    const rect = track.getBoundingClientRect();
    const clickY = e.clientY - rect.top;
    const thumbH = thumb.offsetHeight;
    const targetTop = Math.min(Math.max(clickY - thumbH / 2, 0), rect.height - thumbH);
    const ratio = targetTop / (rect.height - thumbH);
    area.scrollTop = ratio * (area.scrollHeight - area.clientHeight);
  });

  // Dragging
  const onPointerMove = (e) => {
    if (!dragging || e.pointerId !== activePointerId) return;
    e.preventDefault(); // avoid text selection / scroll hijack
    const rect = track.getBoundingClientRect();
    const thumbH = thumb.offsetHeight;
    const delta = e.clientY - dragStartY;

    const maxContentScroll = area.scrollHeight - area.clientHeight;
    const maxThumbTop = rect.height - thumbH;

    const startThumbTop = (startScrollTop / maxContentScroll) * maxThumbTop;
    let newThumbTop = Math.min(Math.max(startThumbTop + delta, 0), maxThumbTop);

    const ratio = (newThumbTop / maxThumbTop) || 0;
    area.scrollTop = ratio * maxContentScroll;
  };

  const endDrag = () => {
    if (activePointerId !== null) {
      try { thumb.releasePointerCapture(activePointerId); } catch {}
    }
    dragging = false;
    activePointerId = null;
    document.removeEventListener('pointermove', onPointerMove);
    document.removeEventListener('pointerup', endDrag);
    document.removeEventListener('pointercancel', endDrag);
  };

  thumb.addEventListener('pointerdown', (e) => {
    e.preventDefault();
    dragging = true;
    activePointerId = e.pointerId;
    thumb.setPointerCapture(activePointerId); // <<< key fix
    dragStartY = e.clientY;
    startScrollTop = area.scrollTop;

    document.addEventListener('pointermove', onPointerMove, { passive: false });
    document.addEventListener('pointerup', endDrag);
    document.addEventListener('pointercancel', endDrag);
  });

  const ro = new ResizeObserver(update);
  ro.observe(area);
  ro.observe(track);

  const mo = new MutationObserver(update);
  mo.observe(area, { childList: true, subtree: true, characterData: true });

  window.addEventListener('load', update);
  window.addEventListener('resize', update);
  update();
})();


</script>

