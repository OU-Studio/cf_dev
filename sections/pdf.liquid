<section id="df-{{ section.id }}" class="pdfbox">
  <div class="_df_book" id="flipbook"
       source="{{ section.settings.pdf_url | escape }}" zoomOnScroll="false"
       style="min-height: {{ section.settings.height | default: 500 }}px; background: {{ section.settings.bg | default: '#ffffff' }};">
  </div>
  <noscript><a href="{{ section.settings.pdf_url | escape }}">Open PDF</a></noscript>
</section>

<script>
var option_flipbook = {
    scrollWheel: false
}
</script>


{% schema %}
{
  "name": "DearFlip (HTML init)",
  "settings": [
    { "type": "url", "id": "pdf_url", "label": "PDF URL" },
    { "type": "range", "id": "height", "min": 360, "max": 1200, "step": 20, "unit": "px", "label": "Height", "default": 600 },
    { "type": "color", "id": "bg", "label": "Background", "default": "#fffdf3" }
  ],
  "presets": [{ "name": "Flipbook (DearFlip)" }]
}
{% endschema %}
