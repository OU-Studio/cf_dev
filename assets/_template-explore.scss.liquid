[data-template="page.explore"] {
  .shopify-section-group-header-group {
    padding-bottom: 0px !important;
  }

  #MainContent .shopify-section:nth-of-type(2) {
    position: relative;
    padding-top: 20px !important;
    padding-bottom: 20px !important;

    &:before {
      content: '';
      display: block;
      width: 100%;
      height: 40px;
      background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/top-filagree_red_website.png?v=1753867167);
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    }

    &:after {
      content: '';
      display: block;
      width: 100%;
      height: 40px;
      background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/top-filagree_red_website.png?v=1753867167);
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    transform: rotate(180deg);
    }

    .rich-text {
      padding-bottom: 0px;
    }


    p {
      text-align: center;
    }

    p,
    h1,
    .rte {
      margin-top: 0px !important;
      margin-bottom: 0px !important;
    }

    p {
      font-family: "garamond-premier-pro-display";
      font-size: var(--garamond-large-size);
      line-height: var(--garamond-large-line-height);
      letter-spacing: var(--garamond-large-letter-spacing);
      font-weight: var(--garamond-large-weight);
      font-style: var(--garamond-large-style);
      color: var(--grey);
    }

    h1 {
      font-size: 50px !important;
      color: var(--black)
    }
  }

  #MainContent .shopify-section:nth-of-type(3) {
.rich-text{
  padding-bottom: 0px !important;
  h2{font-feature-settings: 'swsh' on;}
}
  }

  #MainContent .shopify-section:nth-of-type(4) {
    padding: 0px 10px;
      h2{
        font-style: normal !important;
      }
    .image-with-text__text{
      margin: 0px !important;
      p{
        color: var(--red) !important;
      }
    }
  }

  #MainContent .shopify-section:nth-of-type(5) {
    >.banner .media:before{
      padding-bottom: 150% !important;
    }
  }

  #MainContent .shopify-section:nth-of-type(6) {
    padding: 0px 20px;
    
  }

  #MainContent .shopify-section:nth-of-type(7) {
    padding: 0px 10px;
    > div{
      background-color: var(--cream);
    }
    h2{
      font-size: var(--garamond-small-size);
      text-align: center;
    }
    .image-with-text__content{
      align-items: center !important;
      .button{
        text-align: center;
      }
    }
  }

  #MainContent .shopify-section:nth-of-type(8) {
    .image-with-text__text-item{
      padding: 10px 0px !important;
    }
    h2{
        font-family: 'emperaRegular' !important;
        font-size: 50px;
        line-height: 0.8em;
        letter-spacing: var(--empera-large-letter-spacing);
        font-weight: var(--empera-large-weight);
        font-style: var(--empera-large-style);
        margin: 0px !important;
    }
    .image-with-text__text:nth-of-type(1){
      margin-top: 0px !important;
      p{
        margin: 0px !important;
        font-size: var(--garamond-large-size);
        font-feature-settings: 'swsh' on;
        font-style: italic;
      }
    }
    .image-with-text__text:nth-of-type(2){
      margin-top: 5px !important;
      p{
        font-size: var(--garamond-tiny-size);
        margin-bottom: 5px !important;
      }
      h4{
        margin: 0px !important;
        font-weight: var(--garamond-large-weight);
      }
    }
  }

  
}