.footerTop {
  padding: 10px;
  background-color: var(--cream);
  margin: 0px 20px !important;

  .footerPlane {
    width: 100%;
    padding-top: 48%;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/Asset_Plane.png?v=1743331115);
  }

  h2 {
    text-align: center;
    font-style: italic;
    margin-bottom: 0px !important;
  }

  p {
    text-align: center;
    padding: 0px 10px;

    &:nth-of-type(1) {
      margin-top: 10px !important;
    }

    &:last-of-type {
      margin-bottom: 0px !important;
      font-style: italic;
    }
  }

  .registerform {
    label {
      display: none;
    }

    input.email {
      display: block;
      width: 100%;
      padding: 10px;
      font-style: italic !important;
      text-align: center;
      box-sizing: border-box;
      background-color: transparent;
      border: solid 1px var(--black);
      border-radius: 8px;
    }

    .buttonWrapper {
      position: relative;
      margin-top: 20px;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--red);
      border-radius: 8px;

      .button {
        text-align: center;
        appearance: none;
        background: none;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--cream) !important;
      }
    }
  }
}

