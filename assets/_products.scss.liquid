// ============================================
// 🛍️ Product Page
// ============================================

product-info {
  padding-top: 0px !important;
}

.product {
  background-color: var(--offwhite);

  // ---------- Product Media
  .product__media-wrapper {
    background-color: var(--cream);
    margin: 0px 20px;
  }

  .product__media-list {
    margin: auto !important;
    padding: 0px !important;
    width: 100% !important;

    .media {
      padding-top: 0px !important;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    .slick-list {
      margin-bottom: 10px;
      width: 100% !important;
    }
  }

  .slider.slider--mobile .slider__slide {
    padding-top: 0px !important;
  }

  .slider-buttons {
    display: none !important;
  }

  // ---------- Product Info
  .product__info-wrapper {
    padding: 20px;
    background-color: var(--cream);
    margin: 0px 20px;
  }

  .product__title {
    margin-top: 10px !important;
    margin-bottom: 0px !important;
    padding-top: 10px !important;

    h1 {
      font-style: initial !important;
    }
  }

  .priceWrapperMain {
    margin-top: 5px !important;
  }

  .price-item,
  .price-item.garamondSmall {
    font-family: "garamond-premier-pro-display" !important;
    font-size: var(--garamond-large-size) !important;
    line-height: var(--garamond-large-line-height) !important;
    letter-spacing: var(--garamond-large-letter-spacing) !important;
    font-weight: var(--garamond-large-weight) !important;
    font-style: initial !important;
    color: var(--red) !important;
  }

  // ---------- Quantity
  .quantity__label {
    display: none !important;
  }

  quantity-input {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: -6px;

    input {
      width: 20px;
      text-align: center;
      appearance: none;
      border: none;
      background-color: transparent;
      font-size: 16px !important;
    }

    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    input[type="number"] {
      -moz-appearance: textfield;
    }

    button {
      width: 30px;
      height: 40px;
      appearance: none;
      border: none;
      background-color: transparent;
      display: flex;
      align-items: center;
      justify-content: center;

      .svg-wrapper {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
      }

      svg {
        width: 14px;
      }
    }
  }

  // ---------- Quantity Wrapper
  .qWrapper {
    position: relative;

    .quantity__button path {
      fill: var(--red) !important;
    }

    .spacer {
      display: block;
      width: 100%;
      padding-bottom: 19.0798552833%;
    }

    .buttonBorder {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    quantity-input {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }

  // ---------- Submit Button
  .product-form__submit {
    display: flex;
    width: 100%;
    padding: 10px 20px !important;
    position: relative;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 8px;
    background-color: var(--red);
    appearance: none;

    span {
      line-height: 1em !important;
      font-size: 18px !important;
      color: var(--cream);
      letter-spacing: 0.025em !important;
    }
  }

  .shopify-payment-button {
    display: none !important;
  }

  // ---------- Form Layout
  .qandb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;

    > div {
      width: calc((100% - 10px) / 2);
      flex: none !important;
      margin: 0px !important;
    }

    .product-form,
    .product-form__submit {
      margin: 0px !important;
    }
  }
}

.product__title {
  font-style: initial !important;
  margin-top: 10px !important;
}
