// ----------------------------
// üì¶ Collection grid
// ----------------------------

.collection ul {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  list-style: none;
  padding: 0px;
  margin: 0px;
}

.collection .grid__item {
  width: calc(50% - 5px);
  max-width: 400px;
  background-color: var(--cream);
}

.product-card-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

  > div {
    width: 100%;
  }

  .card__inner .card__content {
    display: none !important;
  }
}

.collection .collection__title.title-wrapper {
  margin: 0px;
}

// ----------------------------
// üñºÔ∏è Card media & hover effect
// ----------------------------

.card .card__inner .card__media {
  position: relative;
  overflow: hidden;
  width: 100%;
  padding-bottom: 100%;
}

.card .card__inner .card__media img {
  width: 100%;
  display: block;
  transition: opacity 0.3s ease;
}

.card .card__inner .card__media img:nth-child(2) {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.card .card__inner .card__media:hover img:nth-child(2) {
  opacity: 1;
}

.card .card__content {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 4px;
  align-items: center;
}

.card__content .card__information {
  padding: 0px;
}

.card__heading {
  max-width: 140px;
  margin: auto;

  a {
    text-decoration: none;
  }
}

.card__information .price {
  margin: auto !important;
}

.card .quick-add {
  margin-bottom: 0px;
}

.quick-add__submit {
  background: transparent;
  color: var(--black);
  border: none;
  padding: 10px 10px;
  margin-top: 10px;
  cursor: pointer;
  border: solid 1px var(--black);
}

.card__badge,
.card__information-volume-pricing-note,
.card__content > .caption-with-letter-spacing,
.card__content > .rating,
.card__badge .badge {
  display: none !important;
}

// ----------------------------
// üóÇÔ∏è Collection list wrapper
// ----------------------------

.collection-list-wrapper ul {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  list-style: none;
  padding: 0px !important;
  margin: 0px 10px;
}

.collection-list-wrapper .grid__item {
  width: calc(50% - 5px);
  max-width: 400px;
  background-color: var(--cream);

  .card__inner .card__content,
  .icon-wrap {
    display: none;
  }
}

.collection-list-title {
  font-style: italic !important;
  text-align: center;
  padding-bottom: 20px !important;
}

.collection-list-view-all {
  display: flex;
  padding: 4px !important;
  border: none !important;
  position: relative;
  align-items: center;
  max-width: 360px;
  width: calc(100% - 40px);
  margin: auto;

  .spacer {
    display: block;
    width: 100%;
    padding-bottom: 22.8813352529%;
  }

  .buttonBorder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  a {
    line-height: 1em !important;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-decoration: none;
    color: var(--black) !important;
    white-space: nowrap;
  }
}

.featured_page .card__media {
  padding-bottom: 145.562130178% !important;
}

// ----------------------------
// üéûÔ∏è Slideshow
// ----------------------------

.slideshow-container {
  position: relative;
  width: 100%;
  max-width: 800px;
  margin: 20px auto;
  overflow: hidden;
}

.slide {
  position: relative;
  width: 100%;
  transition: transform 0.5s ease;
  text-align: center;

  p {
    margin: 10px 20px 40px 20px !important;
  }
}

.slide img {
  width: 100%;
  height: auto;
  max-width: 150px;
  margin: auto;
  margin-top: 10px;
}

blockquote {
  margin: 10px 20px !important;
}

// ----------------------------
// üéØ Slick arrows and dots
// ----------------------------

.slick-list {
  overflow: hidden;
  padding: 0px !important;
  width: calc(100% - 20px);
  margin: auto;
}

.text p {
  text-transform: uppercase;
  font-style: italic;
}

.slick-next,
.slick-prev {
  top: initial !important;
  transform: none !important;
  bottom: 0px !important;
  width: 60px !important;
  height: 30px !important;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  z-index: 9;

  &:before {
    display: none;
  }
}

.slick-next {
  right: 20px !important;
  background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/Finger_Pointing.png?v=1742680749);
}

.slick-prev {
  left: 20px !important;
  background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/Finger_Pointing2.png?v=1742680749);
}

.slick-slider {
  margin-bottom: 0px !important;
}

.slick-dots {
  bottom: 7px !important;
  width: calc(100% - 100px);
  margin: auto;
  margin-left: 50px !important;
  display: flex;
  align-items: center;
  justify-content: center;

  li {
    margin: 0px 4px !important;
    width: 6px !important;
    height: 6px !important;

    &.slick-active button {
      background-color: var(--red);
    }

    button {
      padding: 2px !important;
      width: 6px !important;
      height: 6px !important;
      border: solid 1px var(--red);
      border-radius: 100%;

      &:before {
        display: none !important;
      }
    }
  }
}

