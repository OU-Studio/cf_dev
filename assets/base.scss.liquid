/* Slideshow container positioning and styling */
.slideshow-container {
  position: relative;
  width: 100%; /* Change according to your layout preferences */
  max-width: 800px; /* Max width of the slideshow */
  margin: 20px auto; /* Centering the slideshow */
  overflow: hidden; /* Ensures that anything outside the container is not shown */
}

/* Individual slide styling */
.slide {
  position: relative;
  width: 100%;
  transition: transform 0.5s ease; /* Smooth transition for slide changes */
  text-align: center;
}

/* Styling for each slide image */
.slide img {
  width: 100%; 
  height: auto; /* Maintain aspect ratio */
  max-width: 60px;
  margin: auto;
}

.slick-list{
  overflow: hidden;
  padding: 0px !important;
  width: calc(100% - 20px);
  margin: auto;
}


.text p{
  text-transform: uppercase;
  font-style: italic;
}

.slick-next, .slick-next:hover, .slick-next:active{
  right: 20px !important;
  top: initial !important;
  transform: none !important;
  bottom: 0px !important;
  width: 40px !important;
  height: 20px !important;
  background-image: url(https://cdn.shopify.com/s/files/1/0907/4104/7674/files/Finger_Pointing.png?v=1742680749);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  &:before{
    display: none;
  }
}

