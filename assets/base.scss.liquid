//featured collection - product card
/* Grid layout - 2 columns per row */
.collection ul {
  display: flex;
  flex-wrap: wrap;
  gap: 10px; /* Adjust spacing */
  justify-content: center;
  list-style: none;
  padding: 0px;
  margin: 0px;
}

.collection .grid__item {
  width: calc(50% - 5px); /* 2 columns */
  max-width: 400px;
  background-color: var(--cream);
}

/* Ensure the product card layout */
.product-card-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  .card__inner .card__content{
    display: none !important;
  }
}

.collection .collection__title.title-wrapper{
    margin: 0px;
}

/* Image container with hover effect */
.card .card__inner .card__media {
  position: relative;
  overflow: hidden;
  width: 100%;
  padding-bottom: 100%;
}

.card .card__inner .card__media img {
  width: 100%;
  display: block;
  transition: opacity 0.3s ease;
}

/* Show second image on hover */
.card .card__inner .card__media img:nth-child(2) {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.card .card__inner .card__media:hover img:nth-child(2) {
  opacity: 1;
}

.card .card__content{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10px;
}

.card__content .card__information{
  padding: 0px;
}

/* Title styling */
.card__heading {
  a{
    text-decoration: none;
  }
}

/* Price styling */
.card__information .price { 
  margin: auto !important;
}

/* Add to Cart button */
.card .quick-add{
  margin-bottom: 0px;
}
.quick-add__submit {
  background: transparent;
  color: var(--black);
  border: none;
  padding: 10px 10px;
  margin-top: 10px;
  cursor: pointer;
  border: solid 1px var(--black)
}

/* Hide unwanted elements */
.card__badge,
.card__information-volume-pricing-note,
.card__content > .caption-with-letter-spacing,
.card__content > .rating,
.card__badge .badge {
  display: none !important;
}
 
