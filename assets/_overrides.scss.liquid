.mediaMosaic {
  ul {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 8px;
    /* optional spacing */
    width: 100%;
    aspect-ratio: 2 / 1;
    /* total area is 2x1 */
    height: auto;
    padding: 0;
    list-style: none;
    margin: 0px !important;
  }

  ul li {
    img {
      width: 100% !important;
      height: 100% !important;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
    }

    .product__media {
      padding: 0px !important;
      padding-top: calc(100% - 8px) !important;
    }
  }

  /* Span first item over 2 rows */
  ul li:nth-child(1) {
    grid-row: span 2;
  }

  /* The other two take default spots */
  ul li:nth-child(2) {
    grid-column: 2;
    grid-row: 1;
  }

  ul li:nth-child(3) {
    grid-column: 2;
    grid-row: 2;
  }

}

