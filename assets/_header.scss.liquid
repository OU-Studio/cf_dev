#shopify-section-sections--24609899315578__header {
  padding: 0px !important;
}

.shopify-section-group-header-group.section-header {
  padding-top: 0px !important;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--black);
  padding: 0px 10px;

  .header__inline-menu {
    display: none;
  }

  header-drawer {
    width: 90px;
  }

  .header__heading {
    margin: 10px 0px 7px 0px;
    line-height: 1em !important;

    * {
      line-height: 1em !important;
    }
  }

  .header__icon--menu {
    list-style: none;
  }

  .icon-close {
    display: none;
  }

  .icon-hamburger {
    width: 38px;
    height: 25px;

    path {
      fill: var(--white);
    }
  }

  .hamburgerM {
    width: 40px;
    height: 29px;
    cursor: pointer;
    display: block;

    path {
      transform-origin: center;
      transition: all 0.4s ease;
    }
  }

  .header__icons {
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
    gap: 10px;
    width: 90px;

    .desktop-localization-wrapper {
      display: none;
    }

    .header__icon {
      display: flex;
      align-items: center;
    }

    .svg-wrapper {
      display: flex;
      align-items: center;
    }

    .icon,
    #cartIcon {
      height: 25px;
    }

    svg path {
      fill: var(--white) !important;
    }

    .cart-count-bubble {
      display: none;
    }
  }
}
